{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noErrorTruncation": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "tmp"
  ]
}